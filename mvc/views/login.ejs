<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <main class="d-flex justify-content-evenly flex-column">
        <div class="d-flex justify-content-center">
            <div class="card text-center mb-3" style="width: 18rem;">
                <div class="card-body">
                    <% if (erro) { %>
                        <div class="alert alert-danger mt-3">
                            <%= erro %>
                        </div>
                    <% } %>
                    <form action="/logar" method="POST">

                        <h3>Login</h3>
                        <div>
                            <p><small>Email</small></p>
                            <input class="form-control me-2" type="search" placeholder="Email" aria-label="Search" id="email" name="email">
                        </div>
                        <div>
                            <p><small>Senha</small></p>
                            <input class="form-control me-2" type="password" placeholder="Senha" aria-label="Search" id="Senha" name="Senha">
                        </div>
                        <button class="btn btn-primary" type="submit">Conectar</button>
                    </form>
                    <div class="d-flex justify-content-center">
                        <a href="/cadastro">Criar conta</a>
                        <p class="mx-2">/</p>
                        <a href="/recuperar">Recuperar conta</a>
                    </div>
                </div>
              </div>
        </div>
    </main>
    <!-- Este comentário aparecerá no HTML final -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>